<%-contentFor('title')%>Index
<%-contentFor('section')%>
<a href="/users/create" class="btn btn-primary">Add New user <i class="fas fa-user-plus"></i></a>
<table class="table table-dark table-hover mt-2">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Gender</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% if(users.length > 0) { %>
    <% users.forEach(user => { %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.gender %> <i class="fas fa-<%- (user.gender === 'Male') ? 'mars text-primary' : 'venus text-danger'%>"></i></td>
      <td><%= user.status ? 'Active' : 'Inactive' %> <i class="fas fa-circle <%- user.status ? 'text-success' : 'text-danger' %>"></i></td>
      <td>
        <div class="action d-flex align-items-center">
          <a class="text-decoration-none link-secondary text-purple" href="/users/<%= user.id %>"><i class="fas fa-eye pointer"></i></a>
          <a class="text-decoration-none" href="/users/<%= user.id %>/edit"><i class="fas fa-edit text-secondary pointer mx-2"></i></a>
          <form method="POST" action="http://localhost:3000/api/users/<%= user.id %>/?_method=DELETE">
            <button class="btn m-0 p-0" type="submit"><i class="fas fa-trash-alt text-danger pointer"></i></button>
          </form>
        </div>
      </td>
    </tr>
    <% }) %>
    <% } else { %>
    <td class="text-center" colspan="4">No users</td>
    <% } %>
  </tbody>
</table>